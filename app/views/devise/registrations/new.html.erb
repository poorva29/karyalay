<div class="user-login">
  <div class="container voffset2">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="panel login_form_panel">
        <legend align="center">Sign up</legend>
        <%= bootstrap_form_for(resource, as: resource_name, url:registration_path(resource_name), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-8") do |f| %>
          <%= devise_error_messages! %>
          <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
          <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name' %>
          <%= f.text_field :address, autofocus: true, placeholder: 'Office Address' %>
          <%= f.text_field :phone_number, autofocus: true, placeholder: '123456' %>
          <%= f.email_field :email, autofocus: true, placeholder: 'me@karyalay.com (Username)', icon: "envelope" %>
          <% if @minimum_password_length %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)", icon: 'lock' %>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password', icon: 'lock', label: "Confirm Password" %>
          <%= f.select :role_id, [["Admin", 1], ["Visitor", 2]], { label: "Choose Role" }, { class: "selectpicker" } %>
          <%= f.form_group do %>
            <%= f.submit "Sign Up", class: "btn btn-success" %>
          <% end %>
        <% end %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-3 col-xs-offset-3">
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name) %><br />
              <% end -%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>